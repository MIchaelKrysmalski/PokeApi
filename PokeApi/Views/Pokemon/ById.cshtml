@{
    Layout = "Layout";
    ViewData["Title"] = "List of Pokemon";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using PokeApi.Model

<div class="container">
    <div class="row">
        <div class="col">
            <h1 style="text-align:center">Details</h1>
        </div>
    </div>
    <hr class="my-4">
    <div class="row">
        <div class="col">
            <h3 style="text-align:center">Pokemon</h3>
            <p>Name: @Model.name</p>
            <p>Types: @Model.types</p>
            <p>Color: <p style="background:@Model.color">@Model.color</p></p>
        </div>
        <div class="col-8">
            <div class="row">
                <div class="col">
                    <h3 style="text-align:center">Sprites</h3>
                </div>
            </div>
            <div class="row">
                <div class="col">
                        <h4 style="text-align:center">Default</h4>
                    <div class="row" style="text-align:center">
                        <div class="col">
                            <img src="@Model.sprites[0]" />
                        </div>
                        <div class="col">
                            <img src="@Model.sprites[1]" />
                        </div>
                    </div>
                </div>
                <div class="col" style="text-align:center">
                        <h4 style="text-align:center">Shiny</h4>      
                    <div class="row">
                        <div class="col">
                            <img src="@Model.sprites[2]" />
                        </div>
                        <div class="col">
                            <img src="@Model.sprites[3]" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr class="my-4">
    <div class="row">
        <div class="col">
            <h3 style="text-align:center">Stats</h3>
            <p>Hp: @Model.hp</p>
            <p>Attack: @Model.attack</p>
            <p>Defense: @Model.defense</p>
            <p>Special-Attack: @Model.special_attack</p>
            <p>Special-Defense: @Model.special_defence</p>
            <p>Speed: @Model.speed</p>
        </div>
        <div class="col" style="text-align:center">
            <h3 style="text-align:center">Moves</h3>
            <div class="row">
                <div class="col">
                    <table>
                        @for (int i = 0; i < Model.moves.Count - 4; i += 5)
                        {
                        <tr>
                            <td>@Model.moves[i]</td>
                            <td>@Model.moves[i + 1]</td>
                            <td>@Model.moves[i + 2]</td>
                            <td>@Model.moves[i + 3]</td>
                            <td>@Model.moves[i + 4]</td>
                        </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>